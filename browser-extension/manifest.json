{
  "manifest_version": 3,
  "name": "JobTrust AI - Scam Detector",
  "version": "1.0",
  "description": "Real-time job scam detection on career websites",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:5001/*",
    "https://localhost:5001/*",
    "https://*.linkedin.com/jobs/*",
    "https://*.indeed.com/viewjob*",
    "https://*.indeed.com/job/*",
    "https://*.glassdoor.com/Job/*",
    "https://*.ziprecruiter.com/jobs/*",
    "https://*.monster.com/jobs/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "JobTrust AI - Click to analyze current job"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.linkedin.com/jobs/*",
        "https://*.linkedin.com/jobs/search/*",
        "https://*.indeed.com/*",
        "https://*.indeed.com/viewjob*",
        "https://*.indeed.com/job/*",
        "https://*.glassdoor.com/*",
        "https://*.glassdoor.com/Job/*",
        "https://*.monster.com/*",
        "https://*.ziprecruiter.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' http://localhost:5001 https://localhost:5001"
  }
}
